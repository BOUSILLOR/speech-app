{
  "name": "Speech",
  "version": "0.4",
  "manifest_version": 2,

  "description": "Dictation / Speech Recognition",
  "icons": { "512": "mic.png" },

  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },

  "minimum_chrome_version": "26",

  "permissions": [
    "storage",
    "unlimitedStorage",
    "fileSystem",
    "fileSystem.write",
    "audioCapture",
    "clipboardWrite"
  ],
  "sandbox": {
    "pages": ["prettifier.html"]
  }
}
